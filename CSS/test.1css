.container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20px;
}

.card {
  width: 300px;
  height: 400px;
  margin: 10px;
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.card-img {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.card-content {
  padding: 20px;
}

.card-title {
  font-size: 24px;
  font-weight: bold;
}

.card-text {
  font-size: 16px;
  color: gray;
}

.card-price {
  font-size: 20px;
  color: orange;
}
